{
  "name": "rise-vest-snr-be-test",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "db:create:dev": "cross-env NODE_ENV=development node scripts/db/create",
    "db:create:test": "cross-env NODE_ENV=test node scripts/db/create",
    "db:create:prod": "cross-env NODE_ENV=production node scripts/db/create",
    "db:delete:dev": "cross-env NODE_ENV=development node scripts/db/delete",
    "db:delete:test": "cross-env NODE_ENV=test node scripts/db/delete",
    "db:flush:dev": "cross-env NODE_ENV=development npm run db:delete:dev && npm run db:create:dev",
    "db:flush:test": "cross-env NODE_ENV=test npm run db:delete:test && npm run db:create:test",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f  -d ./src/lib/infra/db/typeOrm.config.ts",
    "show:migrations": "npm run typeorm migration:show -- -d src/lib/infra/db/typeOrm.config.ts",
    "run:migrations": "npm run typeorm migration:run -- -d src/lib/infra/db/typeOrm.config.ts",
    "generate:migration": "npm run typeorm --  -d ./src/lib/infra/db/typeOrm.config.ts  migration:generate  ./src/lib/infra/db/migrations/$npm_config_name ",
    "typeorm:create-migration": "npm run typeorm migration:create ./src/lib/infra/db/migrations/$npm_config_name",
    "typeorm:revert-migration": "npm run typeorm -- -d ./src/lib/infra/db/typeOrm.config.ts migration:revert",
    "migrate:dev": "npm run build && cross-env NODE_ENV=development dotenv -e .env sequelize db:migrate",
    "migrate:test": "npm run build && cross-env NODE_ENV=test dotenv -e .env sequelize db:migrate --env test",
    "migrate:prod": "npm run build && cross-env NODE_ENV=production dotenv -e .env sequelize db:migrate --env production",
    "start:dev": "cross-env NODE_ENV=development nodemon",
    "start": "node dist/bin/www",
    "debug:dev": "cross-env NODE_ENV=development nodemon --inspect ",
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src test --write",
    "prettier:format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier:fix": "npm run prettier -- --write",
    "postinstall": "npm run db:create:dev && npm run migrate:dev ",
    "format": "npm run prettier:fix && npm run lint:fix",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "testWithCoverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jest": "^29.6.4",
    "jsonwebtoken": "^9.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "sequelize": "^6.32.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/passport": "^1.0.12",
    "@types/uuid": "^9.0.2",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.48.0",
    "prettier": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "sequelize-cli": "^6.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
